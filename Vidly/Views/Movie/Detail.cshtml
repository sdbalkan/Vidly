@using Vidly.DomainModels
@model Movie
@{
    ViewBag.Title = "Detail";
}

<h2>@Model.Name</h2>

<table class="table">
    <tr>
        <td>Genre</td>
        <td>@Model.Genre.Name</td>
    </tr>
    <tr>
        <td>Release Date</td>
        <td>
            @if (Model.ReleaseDate.HasValue)
            {
                @Model.ReleaseDate
            }
        </td>
    </tr>
    <tr>
        <td>Date Added</td>
        <td>
            @if (Model.DateAdded.HasValue)
            {
                @Model.DateAdded
            }
        </td>
    </tr>
    <tr>
        <td>Number In Stock</td>
        <td>@Model.NumberInStock</td>
    </tr>
</table>
