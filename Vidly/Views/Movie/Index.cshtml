@using Vidly.DomainModels
@model IEnumerable<Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name,"Detail", new { Id = movie.Id })</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>